cd /sources
tar -xf zstd-1.5.5.tar.gz
cd zstd-1.5.5
make prefix=/usr
make check
echo In the test output there are several places that indicate 'failed'. 
echo These are expected and only 'FAIL' is an actual test failure. There should be no test failures.
make prefix=/usr install
rm -v /usr/lib/libzstd.a
cd /sources
rm -r zstd-1.5.5