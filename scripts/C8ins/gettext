cd /sources
rm -r gettext-0.22
tar -xf gettext-0.22.tar.xz
cd gettext-0.22

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/gettext-0.22

make
make check
echo '(Press ENTER to continue)'
read comfirm22
make install
chmod -v 0755 /usr/lib/preloadable_libintl.so
cd /sources
rm -r gettext-0.22
exit 0